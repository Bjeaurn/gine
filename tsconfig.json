{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "removeComments": true,
        "strictNullChecks": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "outDir": "./dist",
        "declaration": true,
        "experimentalDecorators": true,
        "lib": [
            "dom",
            "es5",
            "es6",
            "es2015"
        ]
    },
    "include": [
        "src/*",
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}